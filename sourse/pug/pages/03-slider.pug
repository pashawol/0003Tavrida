extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug 

block variables
	- let  mainPage= 'bg-black'
block title
	- let  title= 'слайдер'
	title= title
block pagecontent 
	//- +mob-mnu()
	+top-nav() 
	+b.gal-section.flex-grow-1
		.container
			+e.slider--js.swiper-container
				.swiper-wrapper#lightgallery
					- for (var y = 1; y < 5; y++)
						- for (var x = 1; x < 10; x++)
							+e.slide.swiper-slide(  href=`img/@2x/slide-${x}.jpg` ) 
								+e.img-wrap
									img(src=`img/@2x/slide-${x}.jpg`, alt="")
			+arrow()
	+footer()
	